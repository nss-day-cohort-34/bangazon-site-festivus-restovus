@model Bangazon.Models.Order

@{
    ViewData["Title"] = "Order";
}

<h1>My Cart</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>@Model.User.FirstName @Model.User.LastName - Order @Model.OrderId</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var orderProduct in Model.OrderProducts)
                {

                        <tr>
                            <td>@orderProduct.Product.Title</td>
                            <td><a asp-action="Delete" asp-controller="OrderProducts" asp-route-id="@orderProduct.OrderProductId">Delete</a></td>
                            
                        </tr>
                }
            </tbody>
        </table>
<a asp-action="Delete" asp-controller="Orders" asp-route-id="@Model.OrderId">Cancel Order</a>
